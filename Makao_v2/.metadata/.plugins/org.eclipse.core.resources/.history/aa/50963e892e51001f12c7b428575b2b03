package tests;
import java.io.IOException;
import java.net.ServerSocket;
import java.net.Socket;

import org.junit.* ;

import server.PlayerHandle;
import static org.junit.Assert.* ;
public class ClientHandleTest {
	@Test
	public void testWetherCanCreateClientHandle()
	{
		ServerSocket ssocket = null;
		try {
			ssocket = new ServerSocket(9090);
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		if (ssocket!=null)
		{
			Socket clientS = null;
			try {
				clientS = ssocket.accept();
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
			if (clientS!=null)
			{
				PlayerHandle handle = new PlayerHandle(clientS);
				handle.hasPacketReceived();
			}
		}
		
		//handle.getPlayerRequest();
		//handle.getPlayerInfo();
		//
		
		//handle.getCurrentPacket();
		
		
	}
}
