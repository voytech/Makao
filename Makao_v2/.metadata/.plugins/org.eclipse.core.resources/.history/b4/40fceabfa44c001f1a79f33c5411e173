package tests;

import org.junit.*; 
import static org.junit.Assert.* ;
import shared.*;
public class RequestTest {

	@Test
	public void testWhetherAfterCreatingRequestCanReturnRequestID()
	{
	//for example we can request cards named TWO.
	   for (byte id = 0; id<15;id++)
	   {
		   Request req =new Request(id,new Object[]{id});
		   Assert.assertEquals(id, req.getID());
		   Assert.assertEquals(id, (byte)(req.getArgs())[0]);
	   }
	}
	
}
