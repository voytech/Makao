package gui;

import java.awt.Graphics;
import java.util.ArrayList;

public class CardNodeContainer extends ScreenItem{
    private ArrayList<CardNode> nodes = new ArrayList<CardNode>();
	private int x,y,cardOffset;
    public void setLocation(int x,int y)
    {
    	this.x = x;
    	this.y = y;
    }
    public void setCardOffset(int offset)
    {
    	this.cardOffset = offset;	
    }
    public void draw(Graphics g)
	{	
    	int localX=x,localY=y;
    	
    	for (CardNode node : nodes)
    	{
    		node.moveTo(localX, localY);
    		node.draw(g);
    		localX+=cardOffset;
    	}
	}
}
