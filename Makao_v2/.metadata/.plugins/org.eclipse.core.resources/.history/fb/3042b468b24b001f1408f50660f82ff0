package tests;

import shared.*;

import org.junit.* ;

import shared.Card;
import static org.junit.Assert.*; 

public class CardTest 
{
     @Test
     public void TestWheterAfterCreatingCardICanGetSuitAndName()
     {
    	Card c = null;
		try {
			c = new Card(Card.ACE,Card.SPADE);
		} catch (CardOutOfSetException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
    	Assert.assertEquals(Card.ACE, c.getName());
    	Assert.assertEquals(Card.SPADE, c.getSuit()); 
     }
     @Test (expected =  CardOutOfSetException.class) 
     public void TestCreatingCardWithNameOutOfSet() throws CardOutOfSetException
     {
    	 Card c = new Card((byte)15,Card.SPADE);
     } 
     
}
