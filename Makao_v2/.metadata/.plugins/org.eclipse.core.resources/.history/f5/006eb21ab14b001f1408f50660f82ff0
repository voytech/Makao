package tests;

import shared.*;
import org.junit.* ;

import shared.Card;
import static org.junit.Assert.*; 

public class CardTest 
{
     @Test
     public void TestWheterAfterCreatingCardICanGetSuitAndName()
     {
    	 Card c = new Card(Card.ACE,Card.SPADE);
    	 Assert.assertEquals(Card.ACE, c.getName());
    	 Assert.assertEquals(Card.SPADE, c.getSuit()); 
     }
     @Test (expected =  CardNameOutOfSetException.class) 
     public void TestCreatingCardWithNameOutOfSet() throws CardNameOutOfSetException
     {
    	 Card c = new Card((byte)15,Card.SPADE);
     }
     
}
